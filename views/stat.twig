{% extends "base.twig" %}

{% block title %}Статистика{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path("index") }}">Главная страница</a></li>
        <li class="active">Статистика</li>
    </ol>

    <table class="table table-condensed">
        <thead>
        <tr>
            <th>Cookie</th>
            <th>Количество загрузок</th>
            <th>Глубина просмотра 25%</th>
            <th>Глубина просмотра 50%</th>
            <th>Глубина просмотра 75%</th>
            <th>Просмотр полностью</th>
        </tr>
        </thead>

        <tbody>
        {% for row in statistics %}
            <tr>
                <td>{{ row.cookie }}</td>
                <td>{{ row.loaded }}</td>
                <td>{{ row.progress25 }}</td>
                <td>{{ row.progress50 }}</td>
                <td>{{ row.progress75 }}</td>
                <td>{{ row.finished }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="info text-center">Пока нет статистики</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
